<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/material_grey700</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/colorPrimary</item>
    </style>

    <!-- Expanded toolbar text appearance -->
    <style name="ToolbarExpandedTextWithShadow" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:shadowColor">@color/material_black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="MovieSubItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

</resources>
